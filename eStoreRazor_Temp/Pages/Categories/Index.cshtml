@page
@model eStoreRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-0">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-page="/categories/create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> New Category
            </a>
        </div>
    </div>
</div>



<table class="table table-bordered table-striped">
    <thead>

    
    <tr>
        <th>
            Category Name 
        </th>
        <th>
            Display Order
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-outline-success mx-2">
                            <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
    </div>