@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label mt-4"></label>
            <input asp-for="Name" disabled-class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder" class="col-form-label mt-4"></label>
            <input asp-for="DisplayOrder" disabled-class="form-control">
        </div>

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>



    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}

